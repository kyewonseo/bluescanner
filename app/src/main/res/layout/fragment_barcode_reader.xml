<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <info.androidhive.barcode.camera.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <info.androidhive.barcode.camera.GraphicOverlay
                android:id="@+id/graphicOverlay"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:visibility="gone"/>
        </info.androidhive.barcode.camera.CameraSourcePreview>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/black"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barcode_guild"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </FrameLayout>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">
        <TextView
            android:id="@+id/barcode_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="barcode number"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="39.5dp"/>

        <TextView
            android:id="@+id/barcode_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/is_barcode"
            android:textSize="25dp"
            android:gravity="start"
            android:layout_marginBottom="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_barcode_date"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/register_date_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{{API에서 제공하는 날짜}}"
            android:layout_marginBottom="74.5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_barcode_guild"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/btn_register_barcode"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_barcode"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"/>

        </FrameLayout>
    </RelativeLayout>



</LinearLayout>